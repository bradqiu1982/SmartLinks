
@{
    ViewBag.Title = "PrepareApertureSize";
    Layout = "~/Views/Shared/_Layout4ProdLine.cshtml";
}


<link type="text/css" rel="stylesheet" href="~/Content/wafer.css" />

<style type="text/css">
    th, td {
        text-align: center;
    }
</style>

<script type="text/javascript" src="~/Scripts/vcselscreen.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-bootstrap-loading.js"></script>
<script type="text/javascript">
    $(function(){
        VCSELSCREEN.PREPAREAP();
    })
</script>

<div class="col-xs-3 mark-lists">
    <div class="marks-title">
        <span>请输入 WAFER:</span>
    </div>
    <textarea class="form-control marks" id="marks"></textarea>
    <div class="marks-submit">
        <div class="total-marks label-danger col-xs-3" id="total-marks">0</div>
        <div class="col-xs-4">
            <input type="button" class="btn btn-warning btn-marks-clean" id="btn-marks-clean" value="清除">
        </div>
        <div class="marks-op col-xs-4 ">
            <input type="button" class="btn btn-success btn-marks-submit" id="btn-marks-submit" value="提交">
        </div>
    </div>
</div>
<div class="col-xs-9 mark-detail">
    <div class="mark-detail-op">
    </div>
    <table class="table  table-condensed" id="mywafertable">
        <caption class="tb-caption">PREPARE APERTURE SIZE</caption>
        <thead>
            <tr>
                <th>WAFER</th>
                <th>STATUS</th>
            </tr>
        </thead>
        <tbody id="WaferTableID"></tbody>
    </table>
</div>


