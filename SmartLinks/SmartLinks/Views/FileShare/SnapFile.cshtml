
@{
    ViewBag.Title = "SnapFile";
    Layout = "~/Views/Shared/_Layout4Video.cshtml";
}

<link type="text/css" rel="stylesheet" href="~/Content/technicalvideo.css" />
<link type="text/css" rel="stylesheet" href="~/Scripts/jquery-autocomplete/jquery.auto-complete.css" />
<link type="text/css" rel="stylesheet" href="~/Scripts/bootstrap-tagsinput/bootstrap-tagsinput.css" />
<style type="text/css">
    .bootstrap-tagsinput {
        width: 100% !important;
    }

    th, td {
        text-align: center;
    }
    
    .DocLink {
        cursor:pointer;
    }
    .DelLink {
        cursor:pointer;
    }
</style>


<script type="text/javascript" src="~/Scripts/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-tagsinput/bootstrap3-typeahead.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-autocomplete/jquery.auto-complete.min.js"></script>

<script src="~/Scripts/snapfile.js" type="text/javascript"></script>
<script type="text/javascript">
        $(function(){
            SNAPFILE.INIT();
        })
</script>


<div class="row form-group">
    <div class="col-xs-2"></div>
    <div class="col-xs-8" style="border-left-width:8px;border-left-style:solid;border-left-color:#FF7400">
        <strong style="font-family:'Arial Narrow';font-size:18px">Share File</strong>
    </div>
    <div class="col-xs-2"></div>
</div>

<form action="/FileShare/SnapFile" enctype="multipart/form-data" method="post" id="uploadform" name="uploadform">
    <div class="row form-group">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <div class="row form-group">
                <div class="col-xs-2">
                    <span class="btn btn-success btn-file" style="font-family:'Arial Narrow', arial" id="choosefile">
                        <strong><font color="red">Upload Share File</font></strong>
                        <input type="file" name="files" id="file1" runat="server" onchange="ShowFileNames(this)" multiple />
                    </span>
                </div>
                <div class="col-xs-10" style="padding-left:10px;"><label class="form-control label-default" style="background-color:#f5f5f5;margin-left:10px;"  id="filename" name="filename"></label></div>
                <script type="text/javascript">
                    function ShowFileNames(oFile) {
                        if (oFile.files.length == 1) {
                            $('#filename').text(oFile.value);
                        }
                        else {
                            var names = "";
                            $.each(oFile.files, function (i, val) {
                                names += val.name + ';';
                            });
                            $('#filename').text(names);
                        }
                    }
                </script>
            </div>
            <div class="row form-group">
                <div class="col-xs-2" style="padding-right:0px;">
                    @Html.DropDownList("taglist", null, new { @id = "taglist", @name = "taglist", @class = "form-control",@style= "padding-left:3px;padding-right:3px;" })
                </div>
                <div class="col-xs-9" style="padding-left:20px"><input class="form-control" type="text" id="shareto" name="shareto" placeholder="Share Document To" style="padding-left:15px!important;padding-right:0px!important;" /></div>
                <div class="col-xs-1"><button class="btn btn-primary" type="button" id="searchbtn" name="searchbtn" style="margin-left:-20px;">Share</button></div>
            </div>
        </div>
        <div class="col-xs-2"></div>
    </div>
</form>

<hr/>

