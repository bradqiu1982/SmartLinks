
@{
    ViewBag.Title = "VideoLogHistory";
    Layout = "~/Views/Shared/_Layout4Video.cshtml";
    var idx = 1;
}

<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/technicalvideo.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery.dataTables.min.js" type="text/javascript"></script>

<div class="vlog-container">
    @if (ViewBag.history != null && ViewBag.history.Count > 0)
    {
        <div style="text-align: center; margin-bottom: 4%;">
            <h3>Video Visit History</h3>
        </div>
        <table id="vlogdatatable" class="table table-striped table-hover" cellspacing="0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>UserName</th>
                    <th>Video Subject</th>
                    <th>Visit Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.history)
                {
                    <tr>
                        <td>@idx</td>
                        <td>@item.UserName</td>
                        <td>@item.Message</td>
                        <td>@item.CreateAt</td>
                    </tr>
                    idx++;
                }
            </tbody>
        </table>

        <script type="text/javascript">
            $(document).ready(function () {
                $('#vlogdatatable').DataTable({
                    'iDisplayLength': 10,
                    'aLengthMenu': [[10, 20, 30, -1],
                    [10, 20, 30, "All"]],
                    "bAutoWidth": false,
                    "aaSorting": [],
                    "order": false,
                    dom: 'lBfrtip',
                    buttons: ['copyHtml5', 'csv', 'excelHtml5']
                });
            });
        </script>
    }
</div>
