<script>
    $(function () {
        var video = document.getElementById('play-box');
        video.addEventListener("playing", function () {
            var vid = $('#play-box').attr("data-vid");
            var vname = $('#play-box').attr("data-vname");
            $.post('/TVideoSite/VideoLog',
            {
                vid: vid,
                vname: vname
            }, function () {});
        }, false);
    })
</script>