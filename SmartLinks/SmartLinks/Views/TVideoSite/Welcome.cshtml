
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout4Video.cshtml";
}

<link href="~/Content/technicalvideo.css" rel="stylesheet" type="text/css" />
<link href="~/Content/videorecorder.css" rel="stylesheet" type="text/css" />

<div class="wel-container">
    <div class="wel-bg">
        <img src="~/Content/images/welcome.png" class="wel-bg-img" />
    </div>
    <div class="wel-body">
        <div class="wel-title">Welcome to Technical Video</div>
        <div class="wel-subtitle">To serve you better, Would you mind to input your email address?</div>
        <div class="wel-op">
            <div class="input-group">
                <input type="text" class="form-control wel-input" id="username" name="username">
                <span class="input-group-addon">@@Finisar.com</span>
            </div>
            <div class="wel-eg">
                <span class="wel-eg-txt">EG. Brad.Qiu@Finisar.com</span>
            </div>
            <div class="wel-submit">
                <input type="button" class="btn btn-success btn-wel-submit" value="Submit" onclick="UpdateUserName()" />
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#username').focus();
            })

            function UpdateUserName() {
                var username = $('#username').val();
                if (username) {
                    $.post('/TVideoSite/UpdateMachineUserName',
                        {
                            username: username
                        },
                        function (output) {
                            window.location.href = '/TVideoSite/TechnicalVideo';
                        });
                }
                return false;
            }

            $('body').on('keypress', '#username', function (e) {
                if (e.keyCode == 13) {
                   UpdateUserName(); 
               }
            })
        </script>

    </div>

</div>

