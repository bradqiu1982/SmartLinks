<div>
    @if (ViewBag.TotalPage > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination" style="float: right;">
                <li class="@(ViewBag.PageNo == 1 ? "disabled" : "")">
                    <span aria-label="Previous">
                        <span aria-hidden="true" class="@(ViewBag.PageNo == 1 ? "" : "pages")" data-data="1">&laquo;</span>
                    </span>
                </li>
                @if (ViewBag.PageNo == 1)
                {
                    <li class="active"><span>1</span></li>
                    if (ViewBag.TotalPage >= 2)
                    {
                        <li><span class="pages" data-data="2">2</span></li>
                    }
                    if (ViewBag.TotalPage >= 3)
                    {
                        <li><span class="pages" data-data="3">3</span></li>
                    }
                }
                else if (ViewBag.PageNo == 2)
                {
                    <li><span class="pages" data-data="1">1</span></li>
                    <li class="active"><span>2</span></li>
                    if (ViewBag.TotalPage >= 3)
                    {
                        <li><span class="pages" data-data="3">3</span></li>
                    }
                }
                else if (ViewBag.PageNo >= ViewBag.TotalPage)
                {
                    <li><span class="pages" data-data="@(ViewBag.TotalPage - 2)">@(ViewBag.TotalPage - 2)</span></li>
                    <li><span class="pages" data-data="@(ViewBag.TotalPage - 1)">@(ViewBag.TotalPage - 1)</span></li>
                    <li class="active"><span>@ViewBag.TotalPage</span></li>
                }
                else
                {
                    <li><span class="pages" data-data="@(ViewBag.PageNo - 1)">@(ViewBag.PageNo - 1)</span></li>
                    <li class="active"><span>@ViewBag.PageNo</span></li>
                    <li><span class="pages" data-data="@(ViewBag.PageNo + 1)">@(ViewBag.PageNo + 1)</span></li>
                }
                <li class="@(ViewBag.PageNo >= ViewBag.TotalPage ? "disabled": "")">
                    <span aria-label="Next">
                        <span aria-hidden="true" class="@(ViewBag.PageNo >= ViewBag.TotalPage ? "": "pages")" data-data="@ViewBag.TotalPage">&raquo;</span>
                    </span>
                </li>
            </ul>
        </nav>
    }
</div>